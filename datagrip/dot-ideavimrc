set relativenumber
set ignorecase is hls " Search settings: case insensitive incrimental search with highlighting

" Set spacebar as the leader key
let mapleader=" "

" Yank entire buffer to system clipboard
nnoremap <silent> <leader>ya m9ggVG"+yG`9:delm 9<CR>

" Delete entire buffer content
nnoremap <silent> <leader>da ggdG

" Visually select entire buffer content
nnoremap <silent> <leader>va ggVG
